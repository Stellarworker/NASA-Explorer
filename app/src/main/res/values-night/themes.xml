<resources>
    <!-- Base application theme. -->
    <style name="Theme.NASAExplorer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.NASAExplorer.Default">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
    </style>

    <style name="Theme.NASAExplorer.Moon">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/moon_night_1</item>
        <item name="colorPrimaryVariant">@color/moon_night_2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/moon_night_3</item>
        <item name="colorSecondaryVariant">@color/moon_night_4</item>
    </style>

    <style name="Theme.NASAExplorer.Mars">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mars_night_1</item>
        <item name="colorPrimaryVariant">@color/mars_night_2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mars_night_3</item>
        <item name="colorSecondaryVariant">@color/mars_night_4</item>
    </style>
</resources>