<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/headerColor</item>
        <item name="android:fontFamily">?attr/headerFont</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Header.Small">
        <item name="android:textSize">@dimen/common_header_small</item>
    </style>

    <style name="Header.Medium">
        <item name="android:textSize">@dimen/common_header_medium</item>
    </style>

    <style name="Header.Large">
        <item name="android:textSize">@dimen/common_header_large</item>
    </style>

    <style name="Background">
        <item name="android:background">?attr/primaryBackgroundColor</item>
    </style>

    <style name="Widget.Material3.Button.UnelevatedButton.SearchButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/bottom_sheet_search_button_text_size</item>
    </style>

</resources>