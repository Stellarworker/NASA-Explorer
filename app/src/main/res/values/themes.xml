<resources>

    <!-- Base application theme. -->
    <style name="Theme.NASAExplorer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="headerColor">@color/black</item>
        <item name="android:fontFamily">@font/arialnarrow7</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.NASAExplorer.Default">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="headerFont">@font/arialnarrow7</item>
        <item name="primaryBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.NASAExplorer.Moon">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/moon_day_1</item>
        <item name="colorPrimaryVariant">@color/moon_day_2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/moon_day_3</item>
        <item name="colorSecondaryVariant">@color/moon_day_4</item>
        <item name="headerFont">@font/moonrunner</item>
        <item name="primaryBackgroundColor">@color/moon_day_5</item>
    </style>

    <style name="Theme.NASAExplorer.Mars">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mars_day_1</item>
        <item name="colorPrimaryVariant">@color/mars_day_2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mars_day_3</item>
        <item name="colorSecondaryVariant">@color/mars_day_4</item>
        <item name="headerFont">@font/marsandtwist</item>
        <item name="primaryBackgroundColor">
            @color/mars_day_5
        </item>
    </style>

    <style name="Theme.NASAExplorer.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_screen_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/alien</item>
        <item name="postSplashScreenTheme">@style/Theme.NASAExplorer.Default</item>
    </style>

</resources>